<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/item_country_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_flag_vietnam" />

    <TextView
        android:id="@+id/item_country_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />

    <ImageButton
        android:id="@+id/item_country_bt_send_message"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_send_message"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:background="@drawable/send_message_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="3dp"
        android:paddingEnd="5dp"
        />

</LinearLayout>