<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/black"
    >

    <TableLayout
        android:id="@+id/main_activity_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >

        <TableRow
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_span="2"
                android:text="LOGIN FORM"
                android:textColor="@color/teal_200"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/main_activity_tv_username_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="UserName"
                android:textSize="18sp"
                android:typeface="serif"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/main_activity_et_username"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="username"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_marginRight="20dp"
                />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/main_activity_tv_password_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Password"
                android:textSize="18sp"
                android:typeface="serif"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/main_activity_et_password"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="password"
                android:inputType="textPassword"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_marginRight="20dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/main_activity_bt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_span="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:background="@color/teal_200"
                />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>